<h2>友達リスト</h2>

<% if @friends.any? %>
  <% @friends.each do |friend| %>
    <p>
      ⚫︎ <%= friend.username %>
      <% if current_user.friend_with?(friend) %>
        <%= button_to "解除",
                      friendship_path(current_user.friendship_with(friend)),
                                      method: :delete,
                                      data: { turbo_confirm: "友達を解除しますか？" } %>
      <% end %>
    </p>
  <% end %>
<% else %>
  <p>友達がいません</p>
<% end %>